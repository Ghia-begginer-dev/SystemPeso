<UserControl x:Class="SystemPeso.ChatBot.UserControls.UserInbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SystemPeso.ChatBot.UserControls"
             mc:Ignorable="d"
             Height="65"
             HorizontalAlignment="Stretch"
             d:DesignHeight="65" d:DesignWidth="300">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Rectangle Grid.Column="0" RadiusX="100" RadiusY="100" Width="50" Height="50" Fill="Blue" >
        </Rectangle>
        
        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left">
            
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="User Name" FontSize="16" FontWeight="Medium"/>
            <TextBlock Grid.Row="1" Text="Hi! This is a message sent..." Foreground="DimGray"/>
            
        </Grid>
        
    </Grid>
</UserControl>
